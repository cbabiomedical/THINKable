<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@xml/shape"
    tools:context=".Relaxation_popup"
    android:layout_gravity="center">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@xml/shape"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewmed"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/medibtn"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/imageViewsong"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewmed"
            android:src="@drawable/sngbtn"
           android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/imageViewvdo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewsong"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/videobtn" />

        <ImageView
            android:id="@+id/imageViewbw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewvdo"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/binwbtn" />

        <ImageView
            android:id="@+id/imageViewit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewbw"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/binwbtn" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancell"
            android:layout_centerHorizontal="true"
           android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/imageViewit"
            android:id="@+id/cancelcon"
            />

    </RelativeLayout>

</RelativeLayout>