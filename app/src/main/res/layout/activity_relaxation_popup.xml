<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@xml/shape"
    tools:context=".Relaxation_popup"
    android:layout_gravity="center">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:cornerRadius="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@xml/shape"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"

            app:srcCompat="@drawable/medbtn" />
        <ImageView
            android:id="@+id/imageViewsong"
            android:layout_below="@+id/imageViewmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/songbtn" />
        <ImageView
            android:id="@+id/imageViewvdo"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewsong"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"

            app:srcCompat="@drawable/vdobtn" />
        <ImageView
            android:id="@+id/imageViewbw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewvdo"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"

            app:srcCompat="@drawable/binbtn" />
        <ImageView
            android:id="@+id/imageViewit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewbw"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            app:srcCompat="@drawable/isobtn" />
        <ImageView
            android:id="@+id/imageViewcancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageViewit"
           android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"

            app:srcCompat="@drawable/canclebtn" />


    </RelativeLayout>





</RelativeLayout>