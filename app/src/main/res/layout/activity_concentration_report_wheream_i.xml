<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConcentrationReportWhereamI"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/newbg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/toggleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:id="@+id/tg1"
                    >
                    <ImageButton
                        android:id="@+id/concentration"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="@+id/relaxation"
                        android:background="@drawable/concentrationclickedd"



                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="40dp"

                        android:elevation="5dp"
                        android:src="@drawable/conctgb"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/tg2">

                    <ImageButton
                        android:id="@+id/relaxation"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/relaxationun"
                        android:layout_alignEnd="@+id/concentration"
                        android:layout_alignRight="@+id/memo"

                        android:layout_marginTop="40dp"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintLeft_toLeftOf="@+id/concentration"



                        android:elevation="5dp"
                        android:src="@drawable/relaxtga"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:orientation="vertical"
                    android:id="@+id/tg3">

                    <ImageButton
                        android:id="@+id/memory"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="35dp"
                        android:background="@drawable/memoryun"

                        android:layout_marginTop="40dp"


                        android:elevation="5dp"
                        android:src="@drawable/memorytga" />


                </LinearLayout>






            </RelativeLayout>
            <RelativeLayout
                android:layout_centerHorizontal="true"

                android:id="@+id/toggleBtn2"
                android:layout_below="@+id/toggleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/whereAmI"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"

                    android:layout_alignEnd="@+id/progresscon"
                    android:layout_marginLeft="120dp"

                    android:text="Where Am I"
                    android:textColor="@color/white"
                    android:layout_marginEnd="-136dp"
                    android:layout_marginRight="-144dp"
                    android:background="@drawable/whereamii"

                    android:elevation="5dp"
                    android:layout_alignRight="@+id/progresscon"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/progresscon"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:text="Progress"
                    android:textColor="@color/white"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/progresss"

                    android:elevation="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/togglewhere"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toggleBtn2"
                >
                <ImageView
                    android:id="@+id/btn_timeCon"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:paddingHorizontal="20dp"
                    android:layout_width="300dp"
                    android:layout_height="35dp"


                    android:src="@drawable/timetoconcentrate"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




                <View
                    android:layout_width="2dp"
                    android:layout_height="700dp"
                    android:background="#000000"
                    android:layout_marginTop="260dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <View
                        android:id="@+id/hi"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        android:layout_marginTop="270dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="268dp"
                        android:fontFamily="@font/lemon"
                        android:text="Job"
                        android:textColor="#000000"/>
                </LinearLayout>




            </LinearLayout>
            <com.github.mikephil.charting.charts.ScatterChart
                android:id="@+id/chart1"
                android:layout_width="232dp"
                android:layout_height="295dp"
                android:layout_marginLeft="104dp"
                android:layout_marginTop="250dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <View
                        android:id="@+id/hi3"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        android:layout_marginTop="570dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="570dp"
                        android:fontFamily="@font/lemon"
                        android:text="Age"
                        android:textColor="#000000"/>
                </LinearLayout>




            </LinearLayout>

            <com.github.mikephil.charting.charts.ScatterChart
                android:id="@+id/chart3"
                android:layout_width="232dp"
                android:layout_height="295dp"
                android:layout_marginLeft="104dp"
                android:layout_marginTop="570dp" />



            <RelativeLayout
                android:id="@+id/togglewhere1"
                android:layout_marginTop="970dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAllCaps="false"
                    android:elevation="5dp"
                    android:text="Time Stayed Concentrated"
                    android:paddingHorizontal="20dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/progressbtn"
                    android:layout_marginLeft="55dp">

                </androidx.appcompat.widget.AppCompatButton>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">




                <View
                    android:layout_width="2dp"
                    android:layout_height="700dp"
                    android:background="#000000"
                    android:layout_marginTop="1060dp"
                    android:layout_marginLeft="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <View
                        android:id="@+id/hi2"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        android:layout_marginTop="1060dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="1060dp"
                        android:fontFamily="@font/lemon"
                        android:text="Job"
                        android:textColor="#000000"/>
                </LinearLayout>





            </LinearLayout>

            <com.github.mikephil.charting.charts.ScatterChart
                android:id="@+id/chart2"
                android:layout_width="232dp"
                android:layout_height="295dp"
                android:layout_marginStart="104dp"
                android:layout_marginTop="1060dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <View
                        android:id="@+id/hi4"
                        android:layout_width="20dp"
                        android:layout_height="2dp"
                        android:background="#000000"
                        android:layout_marginTop="1380dp"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="1380dp"
                        android:fontFamily="@font/lemon"
                        android:text="Age"
                        android:textColor="#000000"/>
                </LinearLayout>




            </LinearLayout>

            <com.github.mikephil.charting.charts.ScatterChart
                android:id="@+id/chart4"
                android:layout_width="232dp"
                android:layout_height="295dp"
                android:layout_marginLeft="104dp"
                android:layout_marginTop="1380dp" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/Ldark"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />


</RelativeLayout>