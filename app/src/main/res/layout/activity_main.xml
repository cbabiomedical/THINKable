<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomeimage"
    tools:context=".WelcomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="111dp"
            android:layout_height="91dp"
            android:layout_margin="20dp"
            android:src="@drawable/braingym_logo" />

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="serif"
            android:text="@string/thinkable"
            android:textAlignment="center"
            android:textColor="@color/heading_color"
            android:textSize="30sp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/welcomeimage" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal">

        <!--        <ImageView-->
<!--            android:id="@+id/circle_1"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1264dp"-->
<!--            android:layout_gravity="bottom"-->
<!--            android:layout_marginStart="285dp"-->
<!--            android:layout_marginLeft="285dp"-->
<!--            android:src="@drawable/circle" />-->

        <ImageView
            android:id="@+id/circle_2"
            android:layout_width="700dp"
            android:layout_height="500dp"
            android:layout_gravity="left"
            android:src="@drawable/ellipse_3" />
        <ImageView
            android:id="@+id/circle_1"
            android:layout_width="750dp"
            android:layout_height="600dp"
            android:layout_gravity="left"
            android:src="@drawable/ellipse_1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:fontFamily="serif"
            android:layout_marginRight="80dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="@string/get_start"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="80dp" />

        <ImageView
            android:id="@+id/getStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_gravity="right"
            android:layout_marginRight="75dp"
            android:src="@drawable/ic_arrow"
            android:layout_marginEnd="50dp" />
    </FrameLayout>


</LinearLayout>