<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:alpha="0.7"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:alpha="0.7"
        android:background="@color/transparent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/c2"
            android:alpha="0.7"
            android:background="#0D559C"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/c1"
            android:alpha="0.7"
            android:visibility="gone"
            android:background="#010334"/>


        <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/musicpopuplogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/music" />

    <TextView
        android:id="@+id/musicText"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginHorizontal="10dp"
        android:textSize="15sp"
        android:fontFamily="serif"
        android:layout_below="@+id/musicpopuplogo"
        android:text="Click the Selected Music to Play Music File. It is adviced to close your eyes and focus on the audio while listening. You are able to download music files if you wish to download by clicking download button and add music files to favourites by clicking the heart icon"
        android:textAlignment="center" />

    <Button
        android:id="@+id/click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:text="OK"
        android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>