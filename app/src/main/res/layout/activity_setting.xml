<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/newbg"

    android:orientation="horizontal"
    tools:context=".Concentration_Daily">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

            <RelativeLayout
                android:id="@+id/toggleBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/freeplan"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/youare" />

                <ImageView
                    android:id="@+id/getbetter"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/freeplan"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/wantto" />

<!--                <ImageButton-->
<!--                    android:id="@+id/buttonpro"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@+id/getbetter"-->
<!--                    android:layout_marginLeft="50dp"-->
<!--                    android:layout_marginTop="30dp"-->
<!--                    android:layout_marginBottom="20dp"-->
<!--                    android:layout_centerHorizontal="true"-->
<!--                    android:radius="4dp"-->
<!--                    android:src="@drawable/updatetopro" />-->

                <ImageView
                    android:id="@+id/upgradetopro"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/getbetter"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/opgradetpro" />



                    <RelativeLayout

                    android:id="@+id/accountsettings"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/upgradetopro"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="25dp"
                    >

                    <ImageButton
                        android:id="@+id/accountsettings1"
                        android:layout_width="290dp"
                        android:layout_height="50dp"
                        android:background="@drawable/setingbtn"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/accicon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/settingss" />

                    <TextView
                        android:id="@+id/accsetting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/accicon"
                        android:layout_toRightOf="@+id/accicon"
                        android:gravity="center"
                        android:text="Account Settings"
                        android:textColor="@color/dark"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/changepassword"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/accountsettings"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dp">

                    <ImageButton
                        android:id="@+id/changepassword1"
                        android:layout_width="290dp"
                        android:layout_height="50dp"
                        android:background="@drawable/setingbtn"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/passwordd" />

                    <TextView
                        android:id="@+id/image_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/image"
                        android:layout_toRightOf="@+id/image"
                        android:gravity="center"
                        android:text="Change Password"
                        android:textColor="@color/dark"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/location"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/changepassword"
                    android:layout_centerHorizontal="true">

                    <ImageButton
                        android:id="@+id/location2"
                        android:layout_width="290dp"
                        android:layout_height="50dp"
                        android:background="@drawable/setingbtn"
                        android:layout_marginTop="10dp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/location1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/mapss" />

                    <TextView
                        android:id="@+id/userlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/location1"
                        android:layout_toRightOf="@+id/location1"
                        android:gravity="center"
                        android:text="My Current Location"
                        android:textColor="@color/dark"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </RelativeLayout>



                <RelativeLayout
                    android:id="@+id/preferences"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/location"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp">

                    <ImageButton
                        android:id="@+id/preferences1"
                        android:layout_width="290dp"
                        android:layout_height="50dp"
                        android:background="@drawable/setingbtn"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/prefrences1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/prefee" />

                    <TextView
                        android:id="@+id/userpreference"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/prefrences1"
                        android:layout_toRightOf="@+id/prefrences1"
                        android:gravity="center"
                        android:text="Preferences"
                        android:textColor="@color/dark"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/notifications"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/preferences"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp">

                    <ImageButton
                        android:id="@+id/notifications2"
                        android:layout_width="290dp"
                        android:layout_height="50dp"
                        android:background="@drawable/setingbtn"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/notifications1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/notii" />

                    <TextView
                        android:id="@+id/usernotifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/notifications1"
                        android:layout_toRightOf="@+id/notifications1"
                        android:gravity="center"
                        android:text="Notifications"
                        android:textColor="@color/dark"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/help"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/notifications"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp">

                    <ImageButton
                        android:id="@+id/help3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/setingbtn"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/help1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/helpp" />

                    <TextView
                        android:id="@+id/help2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/help1"
                        android:layout_toRightOf="@+id/help1"
                        android:gravity="center"
                        android:text="Help"
                        android:textColor="@color/dark"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/logouto"
                    android:layout_width="290dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/help"
                    android:layout_marginBottom="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp">

                    <ImageButton
                        android:id="@+id/logout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/setingbtn"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/logout1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/logoutt" />

                    <TextView
                        android:id="@+id/logout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/logout1"
                        android:layout_toRightOf="@+id/logout1"
                        android:gravity="center"
                        android:text="Logout"
                        android:textColor="@color/dark"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/Ldark"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />


</RelativeLayout>